<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>

      <div class="max-w-[700px] mx-auto flex p-2 bg-teal  mb-5">
        <div class="flex">
          <div class="flex items-center mr-3">
            <input type="checkbox" id="done">
            <label for="done" class="ml-1">Done</label>
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="upcoming">
            <label for="upcoming" class="ml-1">Upcoming</label>
          </div>
        </div>
      </div>
      <% if ( todos.length > 0 ) { %>
        <ul class="max-w-[700px] mx-auto">
          <% for (let todo of todos ) { %>
            <li class="shadow shadow-lg rounded p-4 mb-5">
              <div class="flex">
                <input type="checkbox" class="w-5 h-5 block mr-3" >
                <div>
                  <h2 class="font-semibold mb-3"><%= todo.name %></h2>
                  <p class="mb-3"><%= todo.description %></p>
                  <p class="italic text-sm text-gray"><%= todo.date_time %></p>
                  <div class="mt-3">
                    <a class="border rounded-sm border-blue px-3 py-1 mr-1" href="/todos/edit-todo/<%= todo.id %>?edit=true">Edit</a>
                    <button class="border rounded-sm border-pink px-3 py-1 mr-1">Delete</button>
                  </div>
                </div>
              </div>
             
            </li>
          <% } %>


        </ul>
      <% } else { %>
        <h1>No Todos Yet!!</h1>
      <% } %>
    </main>
  <%- include('../includes/end.ejs') %>